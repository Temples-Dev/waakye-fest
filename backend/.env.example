# Production Environment Variables for api.waakyefest.online
# Copy this to .env in your production deployment

# Django Settings
SECRET_KEY=your-super-secret-production-key-change-this
DEBUG=0
DJANGO_ALLOWED_HOSTS=api.waakyefest.online,waakyefest.online

# Database - Use your actual database connection string
DATABASE_URL=postgres://user:password@host:5432/database

# CORS Configuration - Allow frontend domain
CORS_ALLOWED_ORIGINS=https://www.waakyefest.online,https://waakyefest.online

# CSRF Configuration - Trust your domains
CSRF_TRUSTED_ORIGINS=https://www.waakyefest.online,https://waakyefest.online,https://api.waakyefest.online

# Paystack
PAYSTACK_SECRET_KEY=your-paystack-secret-key
